<Register>
    on_pre_enter: root.clear_fields()
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0.149, 0.161, 0.204, 1 # 0.655, 0.686, 0.843, .97
            Rectangle:
                pos: self.pos
                size: self.size
        ScrollView:
            canvas.before:
                Color:
                    rgba: 0.149, 0.161, 0.204, 1 # 0.655, 0.686, 0.843, .97
                Rectangle:
                    pos: self.pos
                    size: self.size
            StdSettingsContainer:
                pos_hint: {'top': 1}
                canvas.before:
                    Color:
                        rgba: 0.149, 0.161, 0.204, 1 # 0.655, 0.686, 0.843, .97
                    Rectangle:
                        pos: self.pos
                        size: self.size
                StdSettingTitle:
                    title: 'CADASTRO DE USUÁRIO'
                    desc: "Informe os dados do novo usuário"
                    color: 0,0,0,1
                    bold: False
                    font_size: 17
                    canvas.before:
                        Color:
                            rgba: 0.878, 0.984, 0.984, 1 #0.278, 0.427, 0.459, .5 #e0fbfb
                        Rectangle:
                            pos: self.pos
                            size: self.size
                StdSettingString:
                    id: field_nickname
                    title: 'Login'
                    desc: 'Informe um nome de usuário'
                    value: ''
                StdSettingString:
                    id: field_fullname
                    title: 'Nome completo'
#                    desc: 'Set user full Name'
                    value: ''
                StdSettingSlider:
                    id: field_age
                    title: 'Idade'
                    type: 'int'
#                    desc: 'Set user age'
                    value: 25
                    min: 0
                    max: 120
                StdSettingItem:
                    id: item_gender
                    title: 'Sexo'
#                    desc: 'User gender'
