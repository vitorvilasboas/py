<ControlMenu>:
    on_pre_enter: root.update_screen()
#    label_text: label_text
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
#        canvas:
#            Color:
#                rgba: 185, 182, 183, 0.67 # 128, 128, 128, 0.5
#            Rectangle:
#                size:self.size
#                pos:self.
        canvas.before:
            Color:
                rgba: 0.149, 0.161, 0.204, 1 # 0.655, 0.686, 0.843, .97
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            id: box
            orientation: 'vertical'
            spacing: 20
            padding: 20
            size_hint: None, None
            size: self.minimum_size
#            Label:
#                id: label_msg
#                font_size: 20
#                text: root.label_text

            Button:
                size_hint: None, None
                size: 200,50
                font_size: 17
                text: 'Configurações' ###
                color: 0.149, 0.161, 0.204, 1
                background_color: (0,0,0,0)
                background_normal: ''
                on_press: root.change_to_settings() ###
                canvas.before:
                    Color:
                        rgba: (0.878, 0.984, 0.984, 1)
                    RoundedRectangle:
                        size: 200,50
                        pos: self.pos
                        radius: [14,14,14,14]

            Button:
                size_hint: None, None
                size: 200,50
                font_size: 17
                text: 'Controle de barras' ###
                color: 0.149, 0.161, 0.204, 1
                background_color: (0,0,0,0)
                background_normal: ''
                on_press: root.change_to_bars()
                canvas.before:
                    Color:
                        rgba: (0.878, 0.984, 0.984, 1)
                    RoundedRectangle:
                        size: 200,50
                        pos: self.pos
                        radius: [14,14,14,14]

            Button:
                size_hint: None, None
                size: 200,50
                font_size: 17
                text: 'ICM Space Game' ###
                color: 0.149, 0.161, 0.204, 1
                background_color: (0,0,0,0)
                background_normal: ''
                on_press: root.change_to_galaxy()
                canvas.before:
                    Color:
                        rgba: (0.878, 0.984, 0.984, 1)
                    RoundedRectangle:
                        size: 200,50
                        pos: self.pos
                        radius: [14,14,14,14]

            Button:
                size_hint: None, None
                size: 200,50
                font_size: 17
                text: 'Atingir o alvo' ###
                color: 0.149, 0.161, 0.204, 1
                background_color: (0,0,0,0)
                background_normal: ''
                on_press: root.change_to_target()
                canvas.before:
                    Color:
                        rgba: (0.878, 0.984, 0.984, 1)
                    RoundedRectangle:
                        size: 200,50
                        pos: self.pos
                        radius: [14,14,14,14]

            Button:
                size_hint: None, None
                size: 200,50
                font_size: 17
                on_press: root.back_to_bci()
                text: 'Voltar'
                background_color: (0,0,0,0)
                background_normal: ''
                border_radius: 18
                color: 0.878, 0.984, 0.984, 1
                bold: True
                # color: self.back_color
                canvas.before:
                    Color:
                        rgba: 0.878, 0.984, 0.984, 1
                    Line:
                        rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], self.border_radius)
                        width: 1.2

